<div>
  <div>
    <h1>
      List of all sportsbooks
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new sportsbook
    </h2>

    <form action="/insert_sportsbook" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <button>
        Create sportsbook
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_sportsbooks.each do |a_sportsbook| %>
      <tr>
        <td>
          <%= a_sportsbook.id %>
        </td>

        <td>
          <%= a_sportsbook.name %>
        </td>

        <td>
          <%= time_ago_in_words(a_sportsbook.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_sportsbook.updated_at) %> ago
        </td>

        <td>
          <a href="/sportsbooks/<%= a_sportsbook.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
